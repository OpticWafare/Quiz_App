<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout_quizpreview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eee"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/textView_quizpreview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Quiz Name"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_quizpreview_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="15dp"
        android:text="10 Fragen"
        app:layout_constraintLeft_toLeftOf="@+id/textView_quizpreview_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_quizpreview_name" />

    <TextView
        android:id="@+id/textView_quizpreview_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Abgeschlossen: 4 von 5 TeilnehmerInnen"
        app:layout_constraintLeft_toLeftOf="@+id/textView_quizpreview_1"
        app:layout_constraintTop_toBottomOf="@+id/textView_quizpreview_1" />

    <TextView
        android:id="@+id/textView_quizpreview_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Erstellt am 10.02.2019 um 15:32 Uhr"
        app:layout_constraintLeft_toLeftOf="@+id/textView_quizpreview_2"
        app:layout_constraintTop_toBottomOf="@+id/textView_quizpreview_2" />

    <View
        android:id="@+id/divider_quizpreview_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#1c1c1c"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_quizpreview_3" />

</android.support.constraint.ConstraintLayout>