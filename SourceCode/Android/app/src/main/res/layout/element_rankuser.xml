<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout_rankuser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eee"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/textView_rankuser_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:text="Username"
        android:textColor="#222"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView_rankuser_ranknumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_rankuser_ranknumber" />

    <TextView
        android:id="@+id/textView_rankuser_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="Punkte: 10/10"
        app:layout_constraintLeft_toLeftOf="@+id/textView_rankuser_name"
        app:layout_constraintRight_toRightOf="@+id/textView_rankuser_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_rankuser_name" />

    <TextView
        android:id="@+id/textView_rankuser_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abgeschlossen am 15.02.2019 um 15:59 Uhr"
        app:layout_constraintLeft_toLeftOf="@+id/textView_rankuser_1"
        app:layout_constraintRight_toRightOf="@+id/textView_rankuser_1"
        app:layout_constraintTop_toBottomOf="@+id/textView_rankuser_1" />

    <TextView
        android:id="@+id/textView_rankuser_ranknumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:minWidth="40sp"
        android:text="1."
        android:textColor="#F66"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_rankuser_1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#1a1a1a"
        app:layout_constraintLeft_toLeftOf="@+id/textView_rankuser_ranknumber"
        app:layout_constraintRight_toRightOf="@+id/textView_rankuser_2"
        app:layout_constraintTop_toBottomOf="@+id/textView_rankuser_2" />

</android.support.constraint.ConstraintLayout>